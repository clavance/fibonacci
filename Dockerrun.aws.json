{
  "AWSEBDockerrunVersion": 2,
  "containerDefintions": [
    {
      "name": "client",
      "image": "clavance/fib-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "worker",
      "image": "clavance/fib-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "server",
      "image": "clavance/fib-server",
      "hostname": "backend",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "clavance/fib-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
